<div class="form-card">
  <h2>Edit Goal</h2>
  {{#if error}}<div class="error">{{error}}</div>{{/if}}
  <form id="goal-form" method="POST">
    <div class="form-group">
      <label>Goal Title</label>
      <input type="text" id="goalTitle" name="goalTitle" value="{{goal.goalTitle}}" required />
    </div>
    <div class="form-group">
      <label>Target Date (mm/dd/yyyy)</label>
      <input type="text" id="targetDate" name="targetDate" value="{{goal.targetDate}}" required />
    </div>
    <button type="submit" class="submit-btn">ðŸ’¾ Save Changes</button>
  </form>
</div>

<script src="/js/goal_validation.js"></script>