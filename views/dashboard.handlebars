<div class="dashboard-container">
  <h2>Welcome, {{firstName}}!</h2>
  <p>This is your personalized learning dashboard.</p>

  {{#if isAdmin}}
    <a href="/admin" class="admin-link">Go to Admin Dashboard</a>
  {{/if}}

  <div class="dashboard-section">
    <h3>My Courses</h3>
    {{#if courses.length}}
      <ul class="course-list">
        {{#each courses}}
          <li class="course-card">
            <div class="course-name">{{this.title}}</div>
            <div class="course-progress">Progress: {{this.progress}}%</div>
            <div class="course-status">Status: {{this.status}}</div>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No courses added yet.</p>
    {{/if}}
  </div>

  <div class="dashboard-section">
    <h3>My Goals</h3>
    {{#if goals.length}}
      <ul class="goal-list">
        {{#each goals}}
          <li class="goal-card">
            <div class="goal-text">{{this.goalTitle}}</div>
            {{#if this.isCompleted}}
              <div class="goal-completed">âœ… Completed</div>
            {{else}}
              <div class="goal-pending">ðŸš€ In Progress</div>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No goals added yet.</p>
    {{/if}}
  </div>

  <form action="/logout" method="GET">
    <button type="submit" class="logout-btn">Logout</button>
  </form>
  
</div>
