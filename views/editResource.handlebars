<div class="form-card">
  <h2>Edit Resource</h2>
  <form action="/courses/{{courseId}}/resources/{{resource.resourceId}}/edit" method="POST">
    <div class="form-group">
      <label>Title:</label>
      <input type="text" name="title" value="{{resource.title}}" required>
    </div>
    <div class="form-group">
      <label>Link:</label>
      <input type="url" name="link" value="{{resource.link}}" required>
    </div>
    <button type="submit" class="submit-btn">Save Changes</button>
  </form>
  <a href="/courses/{{courseId}}" class="btn-back">â¬… Cancel</a>
</div>
